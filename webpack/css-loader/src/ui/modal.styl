.component-modal
	width:100%
	height:100%
	position:fixed
	left:0
	top:0
	background:rgba(0,0,0,.3)
	display:none
	.modal-content
		width:500px
		height:300px
		background:#fff
		position:absolute
		left:0
		top:0
		right:0
		bottom:0
		margin:auto
		border-radius:5px
		transition:all .5s ease
		p
			font-size:30px
			line-height:300px